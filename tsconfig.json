{
    "compilerOptions": {
        "module": "ESNext",
        "target": "ES2019",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "isolatedModules": true,
        "preserveSymlinks": true,
        "declaration": true,
        "declarationDir": "dist",
        "jsx": "preserve",
        "skipLibCheck": true,
        "strict": true,
        "resolveJsonModule": true,
        "baseUrl": "."
    },
    "include": ["packages/*/src"],
    "exclude": ["node_modules", "packages/*/node_modules"]
}
